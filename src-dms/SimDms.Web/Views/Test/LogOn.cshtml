@{
    Layout = "~/Views/Shared/_Login2.cshtml";
    ViewBag.Title = "Login Form";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width">
    <title>SIMDMS</title>

    <!-- CSS reference section -->
    <link rel="stylesheet" href="~/assets/lib/css/bootstrap.css">
    <script src="~/assets/lib/js/jquery-1.8.3.min.js"></script>
    <script src="~/assets/lib/js/knockout-3.4.0.js"></script>

    <script src="@Url.Content("~/assets/js/app/login.js")"></script>

    <style>
        .testx {
            font-height: 72px;
            font-weight: 700;
        }

        .labelA {
            font-height: 32px;
            font-weight: 700;
            colour: blue;
        }

        .input-lgx {
            height: 44px;
            padding: 10px 16px;
            font-size: 28px;
            line-height: 1.15;
            border-radius: 6px;
        }

        .myCTL {
            padding-top: 10px;
            padding-left: 30px;
            padding-bottom: 30px;
            padding-right: 15px;
        }
    </style>
</head>

<body style="padding:30px">
    <div class="login">
        <form method="post">
            <div class="row">
                <div class="form-group">
                    <div class="labelA"><b>UserName</b></div>
                    <input type="text" class="testx form-control input-lgx" placeholder="User Name" id="UserName" name="UserName" required="required" onkeypress="runScript(event)" />
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div for="code"><span class="labelA"><b>Password</b></span></div>
                    <input type="password" class="testx form-control input-lgx" placeholder="Password" id="Password" name="Password" required="required" onkeypress="runScript(event)" />
                </div>
            </div>
            <div>
                <div>
                    <a href="#" class="btn btn-primary btn-lg" id="btnLogIn">Log In</a><br />
                </div>
            </div>
        </form>
    </div>
</body>
</html>