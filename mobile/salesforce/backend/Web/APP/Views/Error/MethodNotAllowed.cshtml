@{
    ViewBag.Title = "Method Not Allowed";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Description = "Sorry, but the method you used to contact the server was not allowed.";
}

<div class="jumbotron text-center">
    <header>
        <h1><span aria-hidden="true" class="fa fa-ban text-danger"></span> @ViewBag.Title</h1>
    </header>
    <p>@ViewBag.Description</p>
    <a class="btn btn-primary btn-lg" href="@Url.RouteUrl("~/")"><span aria-hidden="true" class="fa fa-home"></span> Take me home</a>
</div>